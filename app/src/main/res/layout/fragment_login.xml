<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User name"
        android:maxLines="1"
        android:id="@+id/_fragment_login_userName"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/_fragment_login_userName"
        android:id="@+id/_fragment_login_password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_below="@+id/_fragment_login_password"
        android:background="@color/colorPrimaryDarker"
        android:textColor="#FFFFFF"
        android:id="@+id/fragment_login_loginButton"/>

</RelativeLayout>